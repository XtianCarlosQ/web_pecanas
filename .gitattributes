*.astro linguist-language=HTML
*.html linguist-language=HTML
*.css linguist-language=CSS
*.js linguist-language=JavaScript

# Asegurar que Astro se detecte como HTML principalmente
*.astro linguist-documentation=false
*.astro linguist-detectable=true

# Marcar archivos CSS/Tailwind como detectables
src/styles/global.css linguist-vendored=false
*.css linguist-detectable=true

# Asegurar que los archivos HTML sean detectables
*.html linguist-detectable=true
*.astro linguist-vendored=false
