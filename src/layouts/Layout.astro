---
import "../styles/global.css";
import ThemeToggle from "../components/ThemeToggle.astro";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Pecanas Maja Ica-Per√∫",
  description = "Venta de pecanas Maja al por mayor y menor",
} = Astro.props;
---

<!doctype html>
<html lang="es" data-theme>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon_pecana.ico" />
  </head>
  <body class="min-h-dvh bg-amber-50 text-amber-950 dark:bg-slate-950/90">
    <slot />
    <ThemeToggle />
  </body>
</html>
