---
import Image from '../components/Image.astro';

interface Props {
  title: string;
  subtitle: string;
  imageSrc: string;
  imageAlt: string;
}

const { title, subtitle, imageSrc, imageAlt } = Astro.props;
---

<div class="relative overflow-hidden bg-amber-950 rounded-2xl h-[450px] p-2 m-2">
  <!-- Imagen como fondo con overlay y desenfoque -->
  <div class="absolute inset-0 w-full h-full z-0">
    <img src={imageSrc} alt={imageAlt} class="w-full h-full object-cover" />
    <div class="absolute inset-0 bg-black/30 backdrop-blur-[1px]"></div>
  </div>
  <div class="relative z-10 max-w-7xl mx-auto">
    <div class="relative pb-2 sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32">
      <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-16 sm:px-6 md:mt-12 lg:mt-16 lg:px-8 xl:mt-20">
        <div class="sm:text-center lg:text-left">
          <h1 class="text-3xl tracking-tight font-extrabold text-amber-50 sm:text-4xl md:text-4xl">
            <span class="block xl:inline">{title}</span>
            <span class="block text-amber-100 xl:inline">{subtitle}</span>
          </h1>
          <p class="mt-3 text-base text-amber-200 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-lg lg:mx-0">
            Disfruta de las mejores pecanas del país, cosechadas directamente del campo y seleccionadas con los más altos estándares.
            Ideal para negocios que valoran la frescura, la trazabilidad y el sabor inigualable.
          </p>
          <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
            <div class="rounded-2xl shadow">
              <a href="#productos" class="w-full flex items-center justify-center px-8 py-3 border border-transparent shadow-sm text-base font-medium rounded-2xl text-white bg-amber-700 hover:bg-amber-800 md:py-4 md:text-lg md:px-10">
                Ver productos
              </a>
            </div>
            <div class="mt-3 rounded-2xl shadow sm:mt-0 sm:ml-3">
              <a href="https://wa.me/51962210817?text=Estoy%20interesado%20en%20comprar%20pecanas:%0A1.%20Saco%20de%2040%20Kg%0A2.%20Saco%20de%2050%20Kg%0A3.%20Pecanas%20peladas%0A%0AElija%20una%20opci%C3%B3n:%20" 
                target="_blank"
                class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-2xl text-amber-700 bg-amber-50 hover:bg-amber-100 md:py-4 md:text-lg md:px-10">
                Contáctanos
              </a>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
  <!-- Imagen debajo en mobile, visible solo en pantallas pequeñas -->
  <div class="block lg:hidden w-full">
    <img src={imageSrc} alt={imageAlt} class="w-full object-cover h-60 sm:h-72 md:h-96" />
  </div>
  <!-- Imagen lateral solo en pantallas grandes -->
  <div class="hidden lg:block lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
    <img class="h-full w-full object-cover" src={imageSrc} alt={imageAlt} />
  </div>
</div>

