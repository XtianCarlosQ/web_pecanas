---
interface Props {
  title: string;
  price: string;
  unit: string;
  description: string;
  imageSrc: string;
  imageAlt: string;
}

const { title, price, unit, description, imageSrc, imageAlt } = Astro.props;
---

<div class="flex flex-col rounded-lg shadow-lg overflow-hidden bg-white hover:shadow-xl transition-shadow duration-300 h-full">
  <div class="flex-shrink-0 h-48 overflow-hidden">
    <img 
      src={imageSrc} 
      alt={imageAlt} 
      class="w-full h-full object-cover"
      loading="lazy"
    />
  </div>
  <div class="flex-1 p-6 flex flex-col justify-between">
    <div class="flex-1">
      <p class="text-sm font-medium text-amber-600">
        {unit}
      </p>
      <div class="block mt-2">
        <p class="text-xl font-semibold text-gray-900">{title}</p>
        <p class="mt-3 text-base text-gray-500">{description}</p>
      </div>
    </div>
    <div class="mt-6 flex items-center">
      <div class="flex-shrink-0">
        <div class="flex items-center">
          <span class="text-2xl font-bold text-amber-900">S/ {price}</span>
          <span class="ml-2 text-gray-500">/ {unit}</span>
        </div>
      </div>
      <div class="ml-auto">
        <a 
          href="#contacto" 
          class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-amber-600 hover:bg-amber-700"
        >
          Cotizar
        </a>
      </div>
    </div>
  </div>
</div>