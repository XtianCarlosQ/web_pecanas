---
interface Props {
  title: string;
  price: string;
  unit: string;
  description: string;
  imageSrc: string;
  imageAlt: string;
}

const { title, price, unit, description, imageSrc, imageAlt } = Astro.props;
---

<div class="flex flex-col rounded-2xl shadow-lg overflow-hidden bg-white hover:shadow-xl transition-shadow duration-300 h-full">
  <div class="flex-shrink-0 h-64 overflow-hidden flex items-center justify-center" style="background-color: var(--color-pecana-950);">
    <img 
      src={imageSrc} 
      alt={imageAlt} 
      class="max-w-full max-h-full object-contain" 
      style="background-color: var(--color-pecana-950); display: block; margin: auto;"
      loading="lazy" 
    />
  </div>
  <div class="flex-1 p-6 flex flex-col justify-between">
    <div class="flex-1">
      <!-- <p class="text-sm font-medium text-amber-600">
        {unit}
      </p> -->
      <div class="block mt-2">
        <p class="text-xl font-bold text-amber-950">{title}</p>
        <p class="mt-3 text-base text-amber-700">{description}</p>
      </div>
    </div>
    <div class="mt-6 flex items-center">
      <div class="flex-shrink-0">
        <div class="flex items-center">
          <span class="text-2xl font-bold text-amber-950">S/ {price}</span>
          <span class="ml-2 font-extrabold text-amber-600">/ {unit}</span>
        </div>
      </div>
      <div class="ml-auto">
        <a 
          href="#contacto" 
          class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-amber-50 bg-amber-700 hover:bg-amber-800"
        >
          Cotizar
        </a>
      </div>
    </div>
  </div>
</div>